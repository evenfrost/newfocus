.section-contact
    background-image url('/images/backgrounds/contact.jpg')
    color #fff
    flex-direction column
    text-align center

.contact-form input
.contact-form textarea
.contact-info
    background hsla(0, 0%, 100%, .9)


.contact-form
    display block
    margin 20px 0
    max-width 700px
    width 100%
    
    input
    textarea
    button
        border none
        display block
        margin-bottom 15px
        margin-top 15px

    input
    textarea
        color #000
        padding-left 20px
        padding-right 20px
        padding 15px 20px
        width 100%

    textarea
        min-height 250px
        resize vertical

    button
        background transparent
        border 3px solid #fff
        font-family Oswald
        margin-left auto
        margin-right auto
        padding 10px 35px
        text-transform uppercase
        transition background .3s, color .3s

        &:hover
            background #fff
            color #000

.social-links
    
    a
        background #fff
        cursor pointer
        display inline-block
        height 80px
        margin 1px
        padding 15px
        transition background .3s
        width 80px

        svg
            fill #666
            height 100%
            transition fill .3s
            width 100%

        &.link-facebook:hover
        &.link-linkedin:hover

            svg
                fill #fff
                
        &.link-facebook:hover
            background #3b5998

        &.link-linkedin:hover
            background #4875b4

.contact-info
    color #000
    font-style normal
    margin 20px 0
    max-width 260px
    padding 20px
    text-transform uppercase

    .contact-title
        font-family 'Oswald'
        font-size 1.3rem
        line-height 1.3
        margin-bottom 10px

    p
        font-size .8rem
        margin 0